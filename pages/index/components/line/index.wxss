.sline {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.number-font {
  letter-spacing: 2rpx;
  font-family: "Helvetica", "SimSun", "PingFang SC", "Microsoft YaHei";
}
.card-title-font {
  font-size: 33rpx;
  line-height: 46rpx;
}
.big-font {
  font-size: 30rpx;
  line-height: 44rpx;
}
.medium-font {
  font-size: 28rpx;
  line-height: 40rpx;
}
.small-font {
  font-size: 26rpx;
  line-height: 36rpx;
}
.tiny-font {
  font-size: 20rpx;
  line-height: 26rpx;
}
.line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}
.light-line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
}
.tip-block {
  white-space: nowrap;
  display: inline-block;
  font-size: 20rpx;
  line-height: 26rpx;
  padding: 5rpx 8rpx;
  border-radius: 6rpx;
}
.line:not([size="mini"]) {
  width: 100%;
}
.line {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  color: #727986;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: left;
}
.line .line-1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.line .line-1 .title {
  margin-right: 10rpx;
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
}
.line .line-1 .option {
  font-size: 28rpx;
  line-height: 40rpx;
  width: 64vw;
}
.line .line-1 .option .option-text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}
.line .line-1 .rightIcon {
  display: inline-block;
  margin-left: 10rpx;
}
.line .line-2 {
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.line-tap {
  opacity: 0.86;
  transform: scale(0.986, 0.986);
}
