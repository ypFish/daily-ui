.sline {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.number-font {
  letter-spacing: 2rpx;
  font-family: "Helvetica", "SimSun", "PingFang SC", "Microsoft YaHei";
}
.card-title-font {
  font-size: 33rpx;
  line-height: 46rpx;
}
.big-font {
  font-size: 30rpx;
  line-height: 44rpx;
}
.medium-font {
  font-size: 28rpx;
  line-height: 40rpx;
}
.small-font {
  font-size: 26rpx;
  line-height: 36rpx;
}
.tiny-font {
  font-size: 20rpx;
  line-height: 26rpx;
}
.line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}
.light-line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
}
.tip-block {
  white-space: nowrap;
  display: inline-block;
  font-size: 20rpx;
  line-height: 26rpx;
  padding: 5rpx 8rpx;
  border-radius: 6rpx;
}
page {
  position: relative;
  background-color: #fff;
  height: auto;
  padding-bottom: 96rpx;
}
.cover-page {
  padding: 20rpx 30rpx;
  font-weight: bold;
}
.cover-page .title {
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #727986;
}
.cover-page .show-box {
  margin: 30rpx 0;
  display: flex;
  height: 120rpx;
  align-items: flex-start;
  justify-content: space-evenly;
}
.cover-page .article-title {
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  width: 100%;
  text-align: center;
}
.cover-page .article-desc {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  line-height: 70rpx;
  overflow: hidden;
}
.cover-page .article-desc-limit {
  max-height: 490rpx;
}
.cover-page .spread-button {
  display: block;
  margin-top: 10rpx;
}
.popup-page {
  padding: 20rpx 30rpx;
  font-weight: bold;
}
.popup-page .popup-title {
  width: 100%;
  font-size: 30rpx;
  line-height: 44rpx;
  color: #444444;
}
.popup-page .popup-desc {
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #727986;
  margin: 30rpx 0;
}
.container {
  position: relative;
  background-color: #ffffff;
  height: auto;
  padding: 20rpx 30rpx;
}
.container .title-box {
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .title-box .head-icon {
  width: 300rpx;
  height: 300rpx;
  display: block;
}
.container .title-box .title {
  font-size: 40rpx;
}
.container .title-box .desc {
  display: flex;
  margin: 20rpx 0;
  color: #727986;
  font-size: 26rpx;
}
.container .line-box {
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
.container .line-box .line {
  width: 100%;
  height: 1rpx;
  margin: 30rpx 0;
  background-color: rgba(114, 121, 134, 0.2);
}
