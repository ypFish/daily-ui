.sline {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.number-font {
  font-family: "Helvetica", "SimSun", "PingFang SC", "Microsoft YaHei";
}
.card-title-font {
  font-size: 33rpx;
  line-height: 46rpx;
}
.big-font {
  font-size: 30rpx;
  line-height: 44rpx;
}
.medium-font {
  font-size: 28rpx;
  line-height: 40rpx;
}
.small-font {
  font-size: 26rpx;
  line-height: 36rpx;
}
.tiny-font {
  font-size: 20rpx;
  line-height: 26rpx;
}
.line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}
.light-line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
}
.tip-block {
  white-space: nowrap;
  display: inline-block;
  font-size: 20rpx;
  line-height: 26rpx;
  padding: 5rpx 8rpx;
  border-radius: 6rpx;
}
.com-spread-button-box {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
}
.com-spread-button-box .spread-bg-line {
  flex: 1;
  height: 50%;
  border-bottom: 1px solid rgba(114, 121, 134, 0.2);
}
.com-spread-button-box .spread-button {
  height: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: auto;
  padding: 0 20rpx;
}
.com-spread-button-box .spread-button .button-name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #16A085;
  font-weight: bold;
}
.com-spread-button-box .spread-button .button-icon {
  transform: rotate(90deg);
  display: inline-block;
  margin-left: 10rpx;
  transition: transform 0.3s linear 0s;
}
.com-spread-button-box .spread-button .button-loading {
  display: inline-block;
  margin-left: 10rpx;
}
.com-spread-button-box .spread-button .button-icon-spread {
  transform: rotate(270deg);
}
@keyframes circleAns {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(720deg);
  }
}
.com-spread-button-box .spread-button .circleAns {
  animation: circleAns 1.6s linear 0s infinite;
}
