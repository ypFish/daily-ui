.sline {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.number-font {
  font-family: "Helvetica", "SimSun", "PingFang SC", "Microsoft YaHei";
}
.card-title-font {
  font-size: 33rpx;
  line-height: 46rpx;
}
.big-font {
  font-size: 30rpx;
  line-height: 44rpx;
}
.medium-font {
  font-size: 28rpx;
  line-height: 40rpx;
}
.small-font {
  font-size: 26rpx;
  line-height: 36rpx;
}
.tiny-font {
  font-size: 20rpx;
  line-height: 26rpx;
}
.line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}
.light-line-block {
  width: 100%;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
}
.tip-block {
  white-space: nowrap;
  display: inline-block;
  font-size: 20rpx;
  line-height: 26rpx;
  padding: 5rpx 8rpx;
  border-radius: 6rpx;
}
.com-empty {
  width: 100%;
  height: calc(100rpx*5);
  overflow: hidden;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  margin-bottom: -30rpx;
  position: relative;
}
.com-empty .empty-button {
  margin-top: 26%;
}
.com-empty .empty-img {
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 16rpx;
  display: block;
  width: 100%;
  height: 236rpx;
}
